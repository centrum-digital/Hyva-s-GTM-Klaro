<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
  <system>
    <section id="centrum_gtm" translate="label" type="text" sortOrder="997" showInDefault="1" showInWebsite="1" showInStore="1">
      <label>Centrum GTM</label>
      <tab>general</tab>
      <resource>Centrum_GTM::config</resource>
      <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Ustawienia ogólne</label>

        <field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Włącz moduł</label>
          <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>

        <field id="queue_ttl" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>TTL kolejki (sekundy)</label>
        </field>

        <field id="queue_max" translate="label" type="text" sortOrder="31" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Maks. rozmiar kolejki</label>
        </field>

        <field id="ga4_measurement_id" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>GA4 Measurement ID</label>
        </field>

        <field id="ads_conversion_id" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Google Ads Conversion ID</label>
        </field>

        <field id="ads_conversion_label" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Google Ads Conversion Label</label>
        </field>

        <field id="sgtm_endpoint_url" translate="label" type="text" sortOrder="16" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>sGTM Endpoint URL (np. https://collect.example.com/g/collect)</label>
        </field>
        <field id="sgtm_timeout_ms" translate="label" type="text" sortOrder="17" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Timeout żądania (ms)</label>
        </field>
        <field id="sgtm_retry" translate="label" type="select" sortOrder="18" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Retry przy błędzie</label>
          <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <field id="sgtm_max_retries" translate="label" type="text" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Maks. liczba retry</label>
        </field>

        <field id="session_timeout_min" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Timeout sesji (minuty)</label>
        </field>

      </group>
      <group id="klaro_mapping" translate="label" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
          <label>Mapowanie sygnałów Google → services Klaro</label>

          <field id="ad_storage" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
              <label>ad_storage → service Klaro</label>
              <comment>Wpisz ID usługi z Klaro, np. google-ads lub google-adwords.</comment>
          </field>

          <field id="analytics_storage" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
              <label>analytics_storage → service Klaro</label>
              <comment>Wpisz ID usługi z Klaro, np. google-analytics.</comment>
          </field>

          <field id="ad_user_data" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
              <label>ad_user_data → service Klaro</label>
              <comment>Wpisz ID usługi z Klaro, np. google-ads / google-adwords.</comment>
          </field>

          <field id="ad_personalization" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
              <label>ad_personalization → service Klaro</label>
              <comment>Wpisz ID usługi z Klaro, np. personalization lub inna własna nazwa.</comment>
          </field>
      </group>
    </section>
  </system>
</config>

